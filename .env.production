# MongoDB Connection (update with your production MongoDB URI)
MONGODB_URI=mongodb://localhost:27017/chatapp
MONGODB_DB_NAME=chatapp

# JWT Secret (must be a strong, random secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# VAPID Keys for Web Push (generate new ones for production)
VAPID_PUBLIC_KEY=your-public-vapid-key-change-in-production
VAPID_PRIVATE_KEY=your-private-vapid-key-change-in-production
VAPID_EMAIL=admin@yourdomain.com

# Server Port
PORT=3000

# Frontend URL (update with your production frontend URL)
FRONTEND_URL=https://yourdomain.com

# Environment
NODE_ENV=production